<!DOCTYPE html>
<html>
    <head>
        <title>Job Listing </title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <style>
          .cssclassname { display: inline;}

        </style>
    </head>

    <body>

        <div class="container-fluid">
            <%= render "common/navbar" %>
            <%= render "common/flashes" %>
           <div >

             <div class="col-md-2">

                <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
                  <li><i class="glyphicon glyphicon-home"></i>
                       <small><b>后台管理</b></small>
                   </li>
                   <li class="active">
                        <%= link_to("首页", admin_jobs_path ) %>
                   </li>
                   <li>
                        <%= link_to("发布职位",new_admin_job_path) %>
                        <%= link_to("搜索职位",jobs_path)  %>
                   </li>

                </ul>
                <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
                  <li><i class="glyphicon glyphicon-list-alt"></i>
                       <small><b>去前台</b></small>
                  </li>
                  <li class="active">
                      <%= link_to("查看职位",jobs_path) %>
                  </li>
                  <li>
                    <%= link_to("Search","#") %>
                  </li>
                </ul>
                <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
                  <li><i class="glyphicon glyphicon-user"></i>
                       <small><b>用户管理</b></small>
                  </li>
                  <li class="active">
                      <%= link_to("应聘者管理","#") %>
                  </li>
                  <li>
                    <%= link_to("企业管理","#") %>
                  </li>
                </ul>

             </div>

              <div class="col-md-10">
                <%= yield %>
              </div>
         </div>
        </div>

        <%= render "common/footer" %>

    </body>
</html>
