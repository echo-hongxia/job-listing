<div class="pull-right">
  <%= link_to("Add a Job",new_admin_job_path,:class => "btn btn-xs btn-primary")%>
</div>



<table class="table table-boldered table-striped custab">
 <thead>
   <tr>
     <td> 职位名 </td>
     <!-- <td> 职位描述 </td>  -->
     <td> 收到简历数</td>
     <td> 公司名 </td>
     <td> 薪资</td>
     <td> 工作地点</td>
     <td> 发布时间</td>
     <td> 操   作</td>
   </tr>
 </thead>


  <% @jobs.each do |job| %>
    <tr>
        <td>
          <%= render_job_status(job) %>
          <%= link_to(job.title,admin_job_path(job)) %>
        </td>
        <!--<td> <%=job.description%> </td>  -->
        <td> <%= link_to(job.resumes.count,admin_job_resumes_path(job)) %> </td>
        <td> <%= job.company%></td>
        <td>
          <span class="label label-default ">人民币</span> ¥<%= job.wage_lower_bound %> -¥
          <%=job.wage_upper_bound %>
        </td>
        <td> <%= job.place %></td>
        <td>
          <%= job.created_at%>
        </td>
        <td>
          <!--<%=  link_to("Edit",edit_admin_job_path(job),:class => "btn btn-xs btn-info")%> |  -->

        <!--  <%=  link_to("Destroy",admin_job_path(job),:method => :delete,:data => {:confirm => "Are you sure to delete?"})%>
          <%= link_to("Destroy", admin_job_path(job), :method => :delete, :class => "btn btn-xs btn-danger",:data => { :confirm => "Are you sure?" }) %>-->
        <!--  <% if job.is_hidden%>
              <%= link_to("Publish",publish_admin_job_path(job),:method =>:post,:class => "btn btn-xs btn-success") %>
          <% else %>
              <%= link_to("Hide",hide_admin_job_path(job),:method => :post,:class =>"btn btn-xs btn-warning" ) %>
          <% end %> -->
          <%= link_to edit_admin_job_path(job),:class => "btn btn-xs btn-info" do %> <i class="fa fa-pencil"> </i> <%end %>
          <%= link_to admin_job_path(job),:method => :delete,:class => "btn btn-xs btn-danger" ,:data => { :confirm => "Are you sure?" }  do%> <i class="fa fa-trash-o"> </i> <%end %>
          <% if job.is_hidden %>
            <%= link_to publish_admin_job_path(job),:method => :post,:class => "btn btn-xs btn-success" do %> <i class="fa fa-eye"> </i> <% end %>
          <% else %>
            <%= link_to hide_admin_job_path(job),:method => :post,:class => "btn btn-xs btn-warning" do %> <i class="fa fa-eye-slash"> </i><% end %>
          <% end %>


        </td>

    </tr>
  <% end %>

</table>
